#:kivy 2.0.0


<ScreenManager>:
    LotteryScreen:
        name: "home"
    TktScreen:
        name: "ticket"
    TenTktScreen:
        name: "10_tickets"


<LotteryScreen>
    cols:1
    Screen:
        GridLayout:
            cols:1
            size:root.width, root.height
            Label:
                text:"一个彩票模拟器"
        
            Button:
                text:"开始游戏"
                on_release: root.manager.current = "ticket"
  

            # Button:
            #     text:"买十张！"
            #     on_release: root.manager.current = "10_tickets"
    

<TktScreen>

    Screen:
        GridLayout:
            cols:1
            Label:
                id:OneLabel
                text:root.oneTktScreen_instance
            Button:
                text: "买一张"
                on_release: root.printReslut(1)
            Button:
                text: "买十张！"
                on_release: root.printReslut(10)
            Button:
                text:"返回主菜单"
                on_release: root.manager.current = "home"
                on_release: root.cleanData()


