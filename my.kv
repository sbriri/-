#:kivy 2.0.0


<ScreenManager>:
    LotteryScreen:
        name: "home"
    TktScreen:
        name: "ticket"
    printTkt:
        name: "printTkt"


<LotteryScreen>
    cols:1
    Screen:
        GridLayout:
            cols:1
            size:root.width, root.height
            Label:
                text:"一个彩票模拟器"
        
            Button:
                text:"开始游戏"
                on_release: root.manager.current = "ticket"
            Button:
                text:"彩票号码生成"
                on_release: root.manager.current = "printTkt"



<TktScreen>

    Screen:
        GridLayout:
            cols:1
            Label:
                id:OneLabel
                text:root.oneTktScreen_instance
            GridLayout:
                cols:1
                Button:
                    text: "买一张"
                    on_release: root.printReslut(1)
                Button:
                    text: "买十张！"
                    on_release: root.printReslut(10)
                GridLayout:
                    cols:2
                    Button:
                        text:"买！"
                        on_release: root.printReslut(input.text)
                    TextInput:
                        id:input
                        hint_text:"自定义购买数"

                Button:
                    text:"返回主菜单"
                    on_release: root.manager.current = "home"
                    on_release: root.cleanData()

<printTkt>

    Screen:
        GridLayout:
            cols:1
            Label:
                id:OneLabel
                text:root.tktScreen_instance
            GridLayout:
                cols:1
                Button:
                    text: "生一张"
                    on_release: root.printReslut(1)
                Button:
                    text: "生十张！"
                    on_release: root.printReslut(10)
                Button:
                    text:"返回主菜单"
                    on_release: root.manager.current = "home"
                    on_release: root.cleanData()



