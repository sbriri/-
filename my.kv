#:kivy 2.0.0


<ScreenManager>:
    LotteryScreen:
        name: "home"
    OneTktScreen:
        name: "oneticket"
    TenTktScreen:
        name: "10_tickets"


<LotteryScreen>
    cols:1
    Screen:
        GridLayout:
            cols:1
            size:root.width, root.height
            Label:
                text:"请选择彩票购买方式"
        
            Button:
                text:"买一张"
                on_release: root.manager.current = "oneticket"

            Button:
                text:"买十张！"
                on_release: root.manager.current = "10_tickets"
    

<OneTktScreen>

    Screen:
        GridLayout:
            cols:1
            Label:
                id:OneLabel
                text:root.oneTktScreen_instance
            Button:
                text: "买一张"
                on_release: root.printReslut()
            Button:
                text:"返回主菜单"
                on_release: root.manager.current = "home"


<TenTktScreen>
    Screen:
        GridLayout:
            cols:1
            Label:
                id:TenLabel
                text:root.tenTktScreen_instance
            Button:
                text: "买十张！"
                on_release: root.printResult()
            Button:
                text: "返回主菜单"
                on_release: root.manager.current = "home"